                        text: "Sled Weight"
                    TextInput:
                        id: SledWeight
                        disabled: False
                        multiline: False
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: "Calibrated Machine Parameters"
                    Label:
                        text: "Motor Y Offset"
                    TextInput:
                        id: MotorYOffset
                        disabled: False
                        multiline: False
                    Label:
                        text: "Distance Between Motors"
                    TextInput:
                        id: DistBtwnMtrs
                        disabled: False
                        multiline: False
                    Label:
                        text: "Left Chain Tolerance"
                    TextInput:
                        id: LftChTol
                        disabled: False
                        multiline: False
                    Label:
                        text: "Right Chain Tolerance"
                    TextInput:
                        id: RghtChTol
                        disabled: False
                        multiline: False
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: "Pull Machine Settings\nfrom Firmware"
                    Button:
                        text: "Next"
                        on_release: root.Next()
                    Button:
                        text: "Quit"
                        on_release: root.Close()
        Image:
            #Descriptions
            size_hint: (.6,1)
            source: "../Documentation/Calibrate Machine Dimensions/Test Shape Preview.jpg"

