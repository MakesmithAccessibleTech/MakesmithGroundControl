                        multiline: False
                    Label:
                        text: "Chain Over Sprocket"
                    TextInput:
                        id: ChainOverSprocket
                        disabled: False
                        multiline: False
                    Label:
                        text: "Rotational Radius"
                    TextInput:
                        id: RotRad
                        disabled: False
                        multiline: False
